<section id="blogPage">
	{% for post in postslist | reverse %}
		<div class="blogPost" {% if post.url == url %} data-current="current item"{% endif %}>
			<a href="{{ post.url | url }}">
				<div class="headerImage" 
                        {% if post.data.headerimage %}
                        style="background-image: url(../static/img/{{ post.data.headerimage }})"
                        {% endif %}
                    ></div>
				<h4>
					{% if post.data.title %}
						{{ post.data.title }}
					{% else %}
						Untitled
					{% endif %}
				</h4>
				{% if post.data.summary %}
					<p>
						{{ post.data.summary }} <span> ...read more</span>
					</p>
				{% endif %}
			</a>
			{# <p>
				<time datetime="{{ post.date | machineDate }}">
					<small>{{ post.date | readableDate }} by <a href="/authors/{{ post.data.author | slug }}/">{{ post.data.author }}</a></small>
				</time>
			</p>
			{% if post.data.tags %}
				<p>
					{% for tag in post.data.tags %}
		  			{%- if tag != "post" -%}
		  				{% set tagUrl %}/tags/{{ tag }}/{% endset %}
		  			<a href="{{ tagUrl | url }}" rel="tag">{{ tag }}</a>
		  			{%- endif -%}
					{% endfor %}
				</p>
			{% endif %} #}
		</div>
	{% endfor %}
</section>
